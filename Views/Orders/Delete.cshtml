@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order Number</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderNumber)</dd>
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerName)</dd>
        <dt class="col-sm-2">Customer Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerEmail)</dd>
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Name)</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>
        <dt class="col-sm-2">Delivery Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DeliveryDate)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>